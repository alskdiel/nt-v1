<div class="user-info-change-container">
  <div class="user-info-header">
    회원정보변경
  </div>
  <div class="user-info-body">
    <form id="form-user-info" action="/update_user_info" method="post">
      <input type="hidden" name="authenticity_token" value="QGthAE0W7zBgRqvzsphx7J05/bXasa8bpotEkFjwctIqEBfabdK1rN6B8wlcupH4ElpoBt2n9KwRY2it813Whw==">
      <div class="nickname-container component-container">
        <div class="label">닉네임</div>
        <input type="text" class="content" placeholder="닉네임" value="<%= @user_info.nickname %>"/>
        <span class="nick-conf"></span>
      </div>
      <div class="birth-container component-container">
        <div class="label">태어난 년도</div>
        <select class="birth content" name="user_info[birth]">
          <% while @this_year >= @min_year %>
            <% if @this_year == @user_info.birth %>
              <option value="<%= @this_year %>" selected><%= @this_year %></option>
            <% else %>
              <option value="<%= @this_year %>"><%= @this_year %></option>
            <% end %>
            <% @this_year -= 1 %>
          <% end %>
        </select>
        <div class="arrow"></div>
      </div>
      <div class="occupation-container component-container">
        <div class="label">직업</div>
        <select class="occupation content" name="user_info[occupation]">
          <% i = 1 %>
          <% @occupations.each do |occupation| %>
            <% if @user_info.occupation == i %>
              <option value="<%= i %>" selected><%= occupation %></option>
            <% else %>
              <option value="<%= i %>"><%= occupation %></option>
            <% end %>
            <% i += 1 %>
          <% end %>
        </select>
        <div class="arrow"></div>
      </div>
      <div class="sex-container component-container">
        <div class="label">성별</div>
        <% if @user_info.sex == -1 %>
          <input type="radio" name="user_info[sex]" value="-1" checked/>남
          <input type="radio" name="user_info[sex]" value="1"/>여
        <% else %>
          <input type="radio" name="user_info[sex]" value="-1"/>남
          <input type="radio" name="user_info[sex]" value="1" checked/>여
        <% end %>
      </div>
      <div class="submit-container component-container">
        <!-- <input type="submit" value="저장하기"/> -->
        <div class="submit-btn">저장하기</div>
      </div>
    </form>
  </div>
</div>

<div class="user-password-change-container">
